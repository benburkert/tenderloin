#!/usr/bin/env ruby
begin
  require File.expand_path('../../.bundle/environment', __FILE__)
rescue LoadError
  # Fallback on rubygems
  require "rubygems"
end

require 'git-style-binary/command'

# Get library
libdir = File.join(File.dirname(__FILE__), '..', 'lib')
$:.unshift(libdir) unless $:.include?(libdir)
require 'tenderloin'

GitStyleBinary.command do
  short_desc "package the current tenderloin environment"
  banner <<-EOS
Usage: #{command.full_name} #{all_options_string}

Package the current tenderloin environment into a box.

EOS

  opt :include, "files to include in the package", :type => :strings

  run do |command|
    Tenderloin::Commands.package(command.argv[0], command.opts[:include])
  end
end
