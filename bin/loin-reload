#!/usr/bin/env ruby
begin
  require File.expand_path('../../.bundle/environment', __FILE__)
rescue LoadError
  # Fallback on rubygems
  require "rubygems"
end

require 'git-style-binary/command'

# Get library
libdir = File.join(File.dirname(__FILE__), '..', 'lib')
$:.unshift(libdir) unless $:.include?(libdir)
require 'tenderloin'

GitStyleBinary.command do
  short_desc "reload the tenderloin environment"
  banner <<-EOS
Usage: #{command.full_name} #{all_options_string}

Reloads the tenderloin environment. This forces a shutdown of the VM,
updates the metadata (forwarded ports, shared folders, etc.), restarts
the VM, and reruns the chef recipes.

EOS

  run do |command|
    Tenderloin::Commands.reload
  end
end
